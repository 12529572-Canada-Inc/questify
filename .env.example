# Example root environment file for Questify
# Copy this file to `.env` and adjust values as needed.

# Nuxt app
NUXT_PORT=3000

# Worker
WORKER_PORT=4000

# Database (must match docker-compose.yml)
DATABASE_URL="postgresql://questify:questify@localhost:5432/questify"

# OAuth provider credentials (optional)
NUXT_OAUTH_GOOGLE_CLIENT_ID=
NUXT_OAUTH_GOOGLE_CLIENT_SECRET=
NUXT_OAUTH_FACEBOOK_CLIENT_ID=
NUXT_OAUTH_FACEBOOK_CLIENT_SECRET=
