# Example env file for Nuxt app
# Copy this file to `.env` and adjust values as needed.

# AI providers
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
ANTHROPIC_API_VERSION=2023-06-01
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Worker runtime tuning (optional)
AI_MAX_RESPONSE_TOKENS=1200
WORKER_LOG_MAX_CHARS=1200

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional_password
REDIS_URL=redis://:optional_password@localhost:6379

# Database connection URL
DATABASE_URL=postgresql://questify:questify@localhost:5432/questify
