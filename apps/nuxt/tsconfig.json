{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "shared": ["../../packages/shared/src"],
      "shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": [
    "nuxt.config.ts",
    "app.vue",
    "pages/**/*.vue",
    "components/**/*.vue",
    "composables/**/*.ts",
    ".nuxt/**/*.ts"
  ], 
}
