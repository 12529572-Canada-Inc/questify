{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "shared": ["../../packages/shared/src"],
      "shared/*": ["../../packages/shared/src/*"]
    },
    "types": [
      "./types/nuxt-shim",
      "@nuxt/types",
      "@nuxt/schema",
      "@types/node",
      "nuxt-auth-utils",
      "vue-router",
      "vitest/globals"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": [
    "app",
    "server",
    "tests",
    "nuxt.config.ts",
    "vite.config.ts",
    // ðŸ‘‡ Explicitly pull in Nuxtâ€™s generated declarations
    ".nuxt",
    ".nuxt/imports.d.ts",
    ".nuxt/nuxt.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".output"
  ]
}
