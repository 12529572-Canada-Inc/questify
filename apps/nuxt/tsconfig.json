{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "shared": ["../../packages/shared/src"],
      "shared/*": ["../../packages/shared/src/*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxt/schema",
      "@types/node",
      "nuxt-auth-utils",
      "vue-router",
      "vitest/globals"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": [
    "app",
    "server",
    "tests",
    "nuxt.config.ts",
  ],
  "exclude": ["node_modules", "dist", ".output"]
}
