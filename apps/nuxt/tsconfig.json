{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "shared": ["../../packages/shared/src"],
      "shared/*": ["../../packages/shared/src/*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxt/schema",
      "@types/node",
      "nuxt-auth-utils",
      "vue-router",
      "vitest/globals"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": [
    "nuxt.config.ts",
    "app.vue",
    "pages/**/*.vue",
    "components/**/*.vue",
    "composables/**/*.ts",
    "plugins/**/*.ts",
    "tests/**/*.ts",
    ".nuxt/**/*.ts",
    "env.d.ts"
  ],
  "exclude": ["node_modules", "dist", "tests", ".nuxt", ".output", "coverage"],
  "references": [
    { "path": "./.nuxt/tsconfig.app.json" },
    { "path": "./.nuxt/tsconfig.server.json" },
    { "path": "./.nuxt/tsconfig.shared.json" },
    { "path": "./.nuxt/tsconfig.node.json" }
  ]
}
