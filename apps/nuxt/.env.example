# Example env file for Nuxt app
# Copy this file to `.env` and adjust values as needed.

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional_password
REDIS_URL=redis://:optional_password@localhost:6379

# Session password (use a strong, unique password in production)
NUXT_SESSION_PASSWORD=your_secure_password

# Database connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/questify

# OAuth provider credentials
NUXT_OAUTH_GOOGLE_CLIENT_ID=example_google_client_id
NUXT_OAUTH_GOOGLE_CLIENT_SECRET=example_google_client_secret
NUXT_OAUTH_FACEBOOK_CLIENT_ID=example_facebook_client_id
NUXT_OAUTH_FACEBOOK_CLIENT_SECRET=example_facebook_client_secret

# AI feature flags
NUXT_FEATURE_AI_ASSIST=true

# AI providers (set at least one key to enable quest AI assist)
OPENAI_API_KEY=example_openai_api_key
DEEPSEEK_API_KEY=example_deepseek_api_key
ANTHROPIC_API_KEY=example_anthropic_api_key
ANTHROPIC_API_VERSION=2023-06-01
DEEPSEEK_API_KEY=example_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# AI model catalog overrides (optional)
AI_MODEL_CONFIG_JSON=example_ai_model_config.json
AI_MODEL_CONFIG_PATH=example/path/to/ai_model_config.json

# GitHub repository details for issue submission
GITHUB_REPO_OWNER="12529572-Canada-Inc"
GITHUB_REPO_NAME="questify"
GITHUB_TOKEN="ghp_yourgithubtokenhere"

# Test environment variables
NODE_ENV=test
NUXT_TEST_UTILS_ROOT_DIR=apps/nuxt
NUXT_TEST_UTILS_BUILD_DIR=.nuxt/test

# Maximum image upload size in bytes (default: 200MB)
NUXT_PUBLIC_IMAGE_MAX_SIZE_BYTES=209715200 # 200MB in bytes