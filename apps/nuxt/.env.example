# Example env file for Nuxt app
# Copy this file to `.env` and adjust values as needed.

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional_password
REDIS_URL=redis://:optional_password@localhost:6379

# Session password (use a strong, unique password in production)
NUXT_SESSION_PASSWORD=your_secure_password

# Database connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/questify

# OAuth provider credentials
NUXT_OAUTH_GOOGLE_CLIENT_ID=example_google_client_id
NUXT_OAUTH_GOOGLE_CLIENT_SECRET=example_google_client_secret
NUXT_OAUTH_FACEBOOK_CLIENT_ID=example_facebook_client_id
NUXT_OAUTH_FACEBOOK_CLIENT_SECRET=example_facebook_client_secret

# AI feature flags
NUXT_AI_ASSIST_ENABLED=true

# Test environment variables
NODE_ENV=test
NUXT_TEST_UTILS_ROOT_DIR=apps/nuxt
NUXT_TEST_UTILS_BUILD_DIR=.nuxt/test
