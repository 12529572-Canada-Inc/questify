{
  "name": "questify",
  "private": true,
  "scripts": {
    "build": "pnpm --recursive build",
    "dev:nuxt": "pnpm --filter nuxt dev",
    "dev:worker": "pnpm --filter worker dev",
    "format": "pnpm format:nuxt && pnpm format:worker",
    "format:nuxt": "pnpm --filter nuxt format",
    "format:worker": "pnpm --filter worker format",
    "lint": "pnpm lint:nuxt && pnpm lint:worker",
    "lint:nuxt": "pnpm --filter nuxt lint && pnpm --filter nuxt lint:types",
    "lint:worker": "pnpm --filter worker lint",
    "nuxt:clean": "pnpm --filter nuxt clean",
    "nuxt:info": "pnpm --filter nuxt dlx nuxi info",
    "nuxt:prepare": "pnpm --filter nuxt exec nuxi prepare",
    "nuxt:upgrade": "bash ./scripts/upgrade-nuxt.sh",
    "prepare": "bash ./scripts/prepare-safe.sh",
    "prisma:generate": "pnpm --filter prisma generate",
    "prisma:migrate": "pnpm --filter prisma migrate",
    "prisma:deploy": "pnpm --filter prisma run deploy",
    "prisma:seed": "pnpm --filter prisma seed",
    "prisma:clear": "pnpm --filter prisma clear",
    "prisma:reset": "pnpm --filter prisma reset",
    "test": "pnpm test:nuxt && pnpm test:worker && pnpm test:shared",
    "test:coverage": "pnpm --filter nuxt test:coverage && pnpm --filter worker test:coverage && pnpm --filter shared test:coverage",
    "coverage:report": "node ./scripts/coverage-report.mjs",
    "coverage:baseline:update": "pnpm coverage:report -- --write",
    "test:nuxt": "pnpm --filter nuxt test",
    "test:worker": "pnpm --filter worker test",
    "test:shared": "pnpm --filter shared test"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@oxc-minify/binding-darwin-arm64": "0.96.0",
    "@oxc-minify/binding-linux-x64-gnu": "0.97.0",
    "@oxc-parser/binding-darwin-arm64": "0.94.0",
    "@oxc-transform/binding-darwin-arm64": "0.94.0",
    "typescript": "^5.6.3",
    "vercel": "^48.1.6"
  }
}
